@model PROGpart1.Models.Claim
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit Claim</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #333;
            color: #fff;
        }
        .container {
            background-color: #444;
            padding: 20px;
            border-radius: 5px;
            max-width: 600px;
            margin: auto;
            margin-top: 50px;
        }
        .form-group label {
            color: #ddd;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">Submit Claim</h2>
        <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Details"></label>
                <textarea asp-for="Details" class="form-control" placeholder="Enter claim details..."></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SupportDocuments">Upload Supporting Documents</label>
                <input type="file" asp-for="SupportDocuments" class="form-control" />
                <span asp-validation-for="SupportDocuments" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Submit Claim</button>
        </form>
    </div>
</body>
</html>
